{
    "bundles": {
        "css": {
            "source": {
                "files": [
                    "helpers.css",
                    "styles.css"
                ],
                "name": "app.css"
            },
            "vendor": {
                "files": [
                    "css/vendor/normalize.css/normalize.css",
                    "css/vendor/font-awesome/css/font-awesome.css"
                ],
                "name": "libs.css"
            }
        },
        "dist": {
            "source": {
                "files": {
                    "css": [
                        "css/bundles/**/*.*",
                        "css/vendor/**/*.*",
                        "css/assets/**/*.*"
                    ],
                    "favicon": [
                        "favicon/**/*.{jpg,png,ico,svg}"
                    ],
                    "img": [
                        "img/**/*.*"
                    ],
                    "js": [
                        "js/bundles/**/*.*",
                        "js/vendor/**/*.*",
                        "js/assets/**/*.*"
                    ],
                    "root": [
                        "apple-touch-icon.png",
                        "browserconfig.xml",
                        "manifest.json",
                        "favicon.ico",
                        "index.html"
                    ]
                }
            },
            "tasks": [
                "dist:clean",
                "dist:favicon",
                "dist:css",
                "dist:img",
                "dist:js",
                "dist:root"
            ]
        },
        "gulp": {
            "source": {
                "files": [
                    "requires.js",
                    "paths.js",
                    "vars.js",
                    "functions.js",
                    "init.js",
                    "task-dist.js",
                    "task-lib.js",
                    "tasks-watch.js",
                    "tasks-html.js",
                    "tasks-css.js",
                    "tasks-js.js",
                    "tasks-images.js",
                    "tasks-markdown.js",
                    "helpers.js",
                    "make.js",
                    "help.js",
                    "favicon.js"
                ],
                "name": "gulpfile.js",
                "name_setup": "gulpfile.main.js"
            },
            "tasks": [
                "css:app",
                "css:libs",
                "js:app",
                "js:libs",
                "img:main",
                "html:main",
                "readme:main"
            ],
            "watch": {
                "css": {
                    "source": [
                        "source/*.css"
                    ],
                    "vendor": [
                        "libs/**/*.css"
                    ]
                },
                "html": [
                    "i*.html",
                    "head/*.html",
                    "body/*.html"
                ],
                "img": [
                    "img/**/*.*"
                ],
                "js": {
                    "source": [
                        "source/*.js",
                        "source/modules/*.js"
                    ],
                    "vendor": [
                        "libs/**/*.js"
                    ]
                }
            }
        },
        "html": {
            "source": {
                "files": [
                    "index.top.html",
                    "head/start.html",
                    "head/meta.html",
                    "head/favicon.html",
                    "head/css.html",
                    "head/js.html",
                    "head/end.html",
                    "body/start.html",
                    "body/content.html",
                    "body/js.html",
                    "body/end.html",
                    "index.end.html"
                ],
                "name": "index.html"
            }
        },
        "img": {
            "source": {
                "files": [
                    "**/*.*"
                ]
            }
        },
        "js": {
            "source": {
                "files": [
                    "app.iife.top.js",
                    "app.init.js",
                    "modules/libs.js",
                    "modules/globals.js",
                    "modules/utils.js",
                    "modules/$$.js",
                    "modules/core.js",
                    "modules/events.js",
                    "modules/main.js",
                    "app.iife.end.js"
                ],
                "name": "app.js"
            },
            "vendor": {
                "files": [
                    "js/vendor/modernizr/modernizr.js",
                    "js/vendor/jquery/dist/jquery.js",
                    "js/vendor/fastclick/lib/fastclick.js"
                ],
                "name": "libs.js"
            }
        }
    },
    "options": {
        "plugins": {
            "autoprefixer": {
                "browsers": [
                    "ie >= 10",
                    "ie_mob >= 10",
                    "ff >= 30",
                    "chrome >= 34",
                    "safari >= 7",
                    "opera >= 23",
                    "ios >= 7",
                    "android >= 4.4",
                    "bb >= 10",
                    "UCAndroid 11",
                    "OperaMini All",
                    "Samsung >= 4",
                    "ChromeAndroid >= 56"
                ],
                "cascade": false
            },
            "beautify": {
                "css": {
                    "allowed_file_extensions": [
                        "css",
                        "scss",
                        "sass",
                        "less"
                    ],
                    "end_with_newline": true,
                    "indent_char": " ",
                    "indent_size": 4,
                    "newline_between_rules": true,
                    "selector_separator": " ",
                    "selector_separator_newline": true
                },
                "html": {
                    "allowed_file_extensions": [
                        "html"
                    ],
                    "brace_style": "collapse",
                    "end_with_newline": true,
                    "indent_char": " ",
                    "indent_handlebars": false,
                    "indent_inner_html": false,
                    "indent_scripts": "keep",
                    "indent_size": 4,
                    "max_preserve_newlines": 0,
                    "preserve_newlines": true,
                    "unformatted": [
                        "a",
                        "span",
                        "img",
                        "code",
                        "pre",
                        "sub",
                        "sup",
                        "em",
                        "strong",
                        "b",
                        "i",
                        "u",
                        "strike",
                        "big",
                        "small",
                        "pre",
                        "h1",
                        "h2",
                        "h3",
                        "h4",
                        "h5",
                        "h6"
                    ],
                    "wrap_line_length": 0
                },
                "js": {
                    "allowed_file_extensions": [
                        "js",
                        "json",
                        "jshintrc",
                        "jsbeautifyrc"
                    ],
                    "brace_style": "collapse",
                    "break_chained_methods": true,
                    "e4x": false,
                    "end_with_newline": true,
                    "indent_char": " ",
                    "indent_level": 0,
                    "indent_size": 4,
                    "indent_with_tabs": false,
                    "jslint_happy": false,
                    "keep_array_indentation": true,
                    "keep_function_indentation": false,
                    "max_preserve_newlines": 10,
                    "preserve_newlines": true,
                    "space_after_anon_function": false,
                    "space_before_conditional": true,
                    "space_in_empty_paren": false,
                    "space_in_paren": false,
                    "unescape_strings": false,
                    "wrap_line_length": 0
                }
            },
            "browsersync": {
                "server_name": "localhost"
            },
            "find_free_port": {
                "ip": "127.0.0.1",
                "port_count": 2,
                "port_range": {
                    "end": 3100,
                    "start": 3000
                }
            },
            "json_format": {
                "indent_size": 4
            }
        }
    },
    "paths": {
        "base": "localhost/projects/",
        "https": false,
        "index": "index.html"
    },
    "regexp": {
        "css": {
            "empty_zero": {
                "__comment": "0px => 0 (empty_zeros) & 0.0 => 0",
                "f": "gi",
                "p": "(\\b0(cm|em|ex|in|mm|pc|pt|px|vh|vw|vmin)|0\\.0[^\\d])",
                "r": "0"
            },
            "lead_zeros": {
                "__comment": ".23 => 0.23",
                "f": "g",
                "p": "([ |,|:])(\\.\\d+)",
                "r": "$10$2"
            },
            "lowercase_hex": {
                "__comment": "css color lowercase check /#[A-Fa-f0-9]{3,6}/",
                "f": "gi",
                "p": "#[a-f0-9]{3,6}"
            },
            "prefixes": {
                "f": "gi",
                "p": "(\\s+)?\\-(moz|o|webkit|ms|khtml)\\-(?!font-smoothing|osx|print|backface).+?;",
                "r": ""
            }
        },
        "html": {
            "post": {
                "f": "gi",
                "p": "\\$:post\\{\\$?[\\w\\d-_]+\\}",
                "r": ""
            },
            "pre": {
                "f": "gi",
                "p": "\\$:pre\\{\\$?[\\w\\d-_]+\\}",
                "r": ""
            }
        }
    }
}
